    <!--Our Custom CSS Home Page-->
    <link rel="stylesheet" href="./../src/resources/style/style.css">
    <!--Our Custom CSS Login Page-->
    <link rel="stylesheet" href="./../src/resources/style/login.css">
    <!--Our Custom CSS Cadastro Page-->
